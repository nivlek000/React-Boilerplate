{
  "name": "react_boilerplate_with_browsersync_and_babel",
  "version": "1.0.0",
  "description": "React HTML5 SCSS ES6 Boilerplate with Webpack and Babel",
  "main": "index.html",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --hot",
    "build": "rm -rf build && NODE_ENV=production webpack",
    "test": "node scripts/test.js --env=jsdom"
  },
  "author": "Samson Maconi",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react-app": "^3.1.1",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.4",
    "postcss-preset-env": "^4.1.0",
    "postcss-scss": "^1.0.5",
    "react-dev-utils": "^5.0.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.1.4"
  },
  "babel": {
    "presets": [
      "react",
      "env"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines"
  },
  "postcss": {
    "parser": "postcss-scss",
    "plugins": {
      "autoprefixer": {},
      "postcss-preset-env": {},
      "cssnano": {}
    }
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  }
}
